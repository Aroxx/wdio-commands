{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true
  },
  "paths": {
    "src/*": [
      "src/*"
    ]
  },
  "typeroots": [
    "wdio-commands-api"
  ],
  "types": [
    "node",
    "@rpii/wdio-report-events",
    "chai",
    "mocha"
  ],
  "include": [
    "src",
    "@wdio/sync"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "**/tests/*"
  ]
}